{
  "name": "bulma-utilities",
  "version": "0.1.0",
  "description": "Bulma's extension to add utility classes",
  "main": "bulma-utilities.sass",
  "scripts": {
    "build-css": "node-sass --include-path sass sass/bulma-utilities.sass css/bulma-utilities.css",
    "watch-css": "nodemon -e sass -x \"npm run build-css\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/msmadeira/bulma-utilities.git"
  },
  "keywords": [
    "css",
    "sass",
    "bulma",
    "utilities"
  ],
  "author": "Matheus Madeira <madeira.s.matheus@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/msmadeira/bulma-utilities/issues"
  },
  "homepage": "https://github.com/msmadeira/bulma-utilities#readme",
  "dependencies": {
    "bulma-timeline": "^1.1.0",
    "node-sass": "^4.6.0",
    "nodemon": "^1.12.1"
  }
}
